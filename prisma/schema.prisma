datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  name          String
  password      String
  refresh_token String
  role          String
  profile       Profile?
  carts         cart[]
}

model Profile {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  nomor     String     @unique
  provinsi  String
  kota      String
  kecamatan String
  kodepos   Int
  alamat    String
  userId    String     @unique @db.ObjectId
  user      user       @relation(fields: [userId], references: [id])
}

model cart {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  total     Int
  users     user      @relation(fields: [userId], references: [id])
  userId    String    @db.ObjectId
  createAt  DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  productId String    @unique @db.ObjectId
  productsz product[]    
}

model product{
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  harga         Int
  desc          String
  image         String
  createAt      DateTime @default(now())
  updatedAt     DateTime @updatedAt
  categorys     category @relation(fields: [categoryTitle], references: [title])
  categoryTitle String  
  carts cart    @relation(fields: [id], references: [productId])
}

model category{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String   @unique
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
  cproducts product[]
}

